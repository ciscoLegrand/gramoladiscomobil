<%= render 'layouts/shared/modal' do %>
  <%= form_tag verify_password_album_path(@album), method: :post, data: { turbo_action: 'replace' }, class: 'w-full flex flex-col gap-4 justify-center items-center' do %>
    <div class="w-full">
      <%= text_field_tag :password, params[:password], class: 'w-full border rounded' %>
    </div>
    <div class="w-full flex justify-between items-center gap-8">
      <%= submit_tag nil, :name => nil, class: 'w-full px-4 py-2 rounded bg-blue-500 hover:bg-blue-600 text-white cursor-pointer' %>
    </div>
  <% end %>
<% end %>