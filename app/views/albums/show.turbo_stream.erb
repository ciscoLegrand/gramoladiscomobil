<%= turbo_stream.append "images" do %>
  <%= render partial: "albums/images/image", collection: @images %>
<% end %>
<% if @pagy.next.present? %>
 <%= turbo_stream.replace "pagination" do %>
   <%= turbo_frame_tag "pagination", src: album_path(@album, page: @pagy.next, format: :turbo_stream), loading: :lazy %>
 <% end %>
<% end %>