<main class="min-h-screen bg-gray-100 dark:bg-gray-800 py-6 flex flex-col justify-center sm:py-12">
	<section class="relative py-3 w-full sm:w-2/3 sm:max-w-4xl sm:mx-auto px-4 sm:px-0">
		<div class="absolute inset-0 bg-gradient-to-r from-blue-300 to-blue-600 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl"></div>
		<article class="w-full relative p-4 sm:p-10 lg:p-20 bg-white dark:bg-gray-900 shadow-lg sm:rounded-3xl">
			<div class="mx-auto sm:max-w-4xl">
        <%= form_with(model: contact, class: "divide-y divide-gray-200 dark:divide-gray-700") do |form| %>
          <% if contact.errors.any? %>
            <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
              <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

              <ul>
                <% contact.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <section class="w-full py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7 flex flex-col gap-4">
            <div class="flex gap-4">
              <div class="w-full relative">
                <%= form.text_field :title, class: "peer placeholder-transparent h-10 w-full border-t-0 focus:border-t-0 focus:border-x-0 focus:ring-transparent border-x-0 border-b-2 border-b-gray-300 dark:border-b-gray-600 text-gray-900 dark:text-gray-100 focus:outline-none focus:border-b-rose-600", placeholder: 'Tu Consulta' %>
                <%= form.label :title, class: "absolute left-0 -top-3.5 text-gray-600 dark:text-gray-400 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm" %>
              </div>
            </div>
            <div class="flex justify-between items-center gap-4">
              <div class="w-full relative">
                <%= form.text_field :name, class: "peer placeholder-transparent h-10 w-full border-t-0 focus:border-t-0 focus:border-x-0 focus:ring-transparent border-x-0 border-b-2 border-b-gray-300 dark:border-b-gray-600 text-gray-900 dark:text-gray-100 focus:outline-none focus:border-b-rose-600", placeholder: 'Pablo' %>
                <%= form.label :name, class: "absolute left-0 -top-3.5 text-gray-600 dark:text-gray-400 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm" %>
              </div>

              <div class="w-full relative">
                <%= form.phone_field :phone, class: "peer placeholder-transparent h-10 w-full border-t-0 focus:border-t-0 focus:border-x-0 focus:ring-transparent border-x-0 border-b-2 border-b-gray-300 dark:border-b-gray-600 text-gray-900 dark:text-gray-100 focus:outline-none focus:border-b-rose-600", placeholder: '123456789', pattern: '/\A\d{9,12}\z/' %>
                <%= form.label :phone, class: "absolute left-0 -top-3.5 text-gray-600 dark:text-gray-400 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm" %>
              </div>

              <div class="w-full relative">
                <%= form.email_field :email, class: "peer placeholder-transparent h-10 w-full border-t-0 focus:border-t-0 focus:border-x-0 focus:ring-transparent border-x-0 border-b-2 border-b-gray-300 dark:border-b-gray-600 text-gray-900 dark:text-gray-100 focus:outline-none focus:border-b-rose-600", placeholder: 'tucorreo@ejemplo.com', pattern: '[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$' %>
                <%= form.label :email, class: "absolute left-0 -top-3.5 text-gray-600 dark:text-gray-400 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm" %>
              </div>
            </div>

            <%= form.fields_for :data, class: "flex flex-col my-4 gap-4" do |data_fields| %>
              <%= data_fields.hidden_field :opened, value: false %>
              <div class="flex justify-between items-center gap-4">
                <div class="w-full relative">
                  <%= data_fields.text_field :location, class: "peer placeholder-transparent h-10 w-full border-t-0 focus:border-t-0 focus:border-x-0 focus:ring-transparent border-x-0 border-b-2 border-b-gray-300 dark:border-b-gray-600 text-gray-900 dark:text-gray-100 focus:outline-none focus:border-b-rose-600", placeholder: 'Santiago' %>
                  <%= data_fields.label :location, class: "absolute left-0 -top-3.5 text-gray-600 dark:text-gray-400 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm" %>
                </div>
                <div class="w-full relative">
                  <%= data_fields.date_field :date_event, class: "peer placeholder-transparent h-10 w-full border-t-0 focus:border-t-0 focus:border-x-0 focus:ring-transparent border-x-0 border-b-2 border-b-gray-300 dark:border-b-gray-600 text-gray-900 dark:text-gray-100 focus:outline-none focus:border-b-rose-600" %>
                  <%#= form.label :date_event, class: "absolute left-0 -top-3.5 text-gray-600 dark:text-gray-400 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm" %>
                </div>
              </div>
              <div class="flex justify-between items-center gap-4">
                <div class="w-full relative">
                  <%= data_fields.select :main_service, {} , {}, class: "w-full peer placeholder-transparent h-10 w-full border-t-0 focus:border-t-0 focus:border-x-0 focus:ring-transparent border-x-0 border-b-2 border-b-gray-300 dark:border-b-gray-600 text-gray-900 dark:text-gray-100 focus:outline-none focus:border-b-rose-600" do %>
                    <optgroup label="MAIN:">
                      <%= options_for_select(["- Service1", "- Service2", "- Service3"]) %>
                    </optgroup>
                  <% end %>
                </div>

                <div class="w-full relative">
                  <%= data_fields.select :extra_services, {} , {}, class: "w-full peer placeholder-transparent h-10 w-full border-t-0 focus:border-t-0 focus:border-x-0 focus:ring-transparent border-x-0 border-b-2 border-b-gray-300 dark:border-b-gray-600 text-gray-900 dark:text-gray-100 focus:outline-none focus:border-b-rose-600" do %>
                    <optgroup label="Extra:">
                      <%= options_for_select(["- Service1", "- Service2", "- Service3"]) %>
                    </optgroup>
                  <% end %>
                </div>
              </div>
            <% end %>

            <div class="w-full relative my-8">
              <%= form.text_area :body, rows: 4, class: "peer placeholder-transparent w-full border-t-0 focus:border-t-0 focus:border-x-0 focus:ring-transparent border-x-0 border-b-2 border-b-gray-300 dark:border-b-gray-600 text-gray-900 dark:text-gray-100 focus:outline-none focus:border-b-rose-600", placeholder: 'Tu consulta explicada' %>
              <%= form.label :body, class: "absolute left-0 -top-3.5 text-gray-600 dark:text-gray-400 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm" %>
            </div>

            <div class="w-full relative">
              <%= form.submit "Submit", class: "w-full sm:w-auto bg-blue-500 dark:bg-blue-700 text-white rounded-md px-2 py-1" %>
            </div>
          </div>
        <% end %>
      </div>
    </article>
  </section>
</main>
