<% opinions = []
    10.times do
      opinions << OpenStruct.new(
        name: "Marta",
        title: "La mejor elección",
        body: "La mejor elección que pudimos hacer para nuestra boda. Nos lo pasamos genial y los invitados también. Muy profesionales y atentos. Lo recomiendo 100%.",
        ratingStar: rand(0.0..5.0).round(1)
      )
    end
%>
<%= stylesheet_link_tag "https://unpkg.com/swiper@v10.0.4/swiper-bundle.min.css", "data-turbo-track": "reload" %>

<section class="py-12 bg-gray-50 dark:bg-[#444654] border-b border-black/10 dark:border-gray-900/50 overflow-hidden">
  <h1 class="text-2xl text-center">Nuestros clientes opinan</h1>
  <div class="opinions" data-controller="swiper">
    <div class="swiper-container my-5 min-h-[30rem] flex items-center" data-swiper-target="opinions">
      <div class="swiper-wrapper container">
        <% opinions.each do |opinion|%>
          <div class="swiper-slide">
            <div class="p-6 bg-white dark:bg-[#444654] rounded-lg shadow-md dark:text-gray-100">
              <p class="mt-2 mb-4 text-sm">
                <span>
                  <%= opinion.name %>
                </span>
              </p>
              <p class="text-xl font-semibold">
                <%= link_to opinion.title, 'https://www.bodas.net/musica/la-gramola-discotecas-moviles--e15600/opiniones', target: 'blank', class: "text-indigo-600 dark:text-indigo-400" %>
              </p>
              <p class="text-sm">
                <%= opinion.body %>
              </p>
              <div class="mt-4 flex items-center">
                <%= link_to 'https://www.bodas.net/musica/la-gramola-discotecas-moviles--e15600/opiniones', target: 'blank' do%>
                  <%#=inline_svg_tag('icons/ico-bodasnet.svg', class: "w-10 h-10")%>
                <% end %>
              </div>
              <p class="mt-4 mb-3 text-right">
                <span class="mr-2">
                  <% count = 0.0 %>         
                  <% while count < opinion.ratingStar do  %>
                    <span> ⭐ </span>
                    <% count += 1 %>
                  <% end %>
                </span>
                <span class="inline-block bg-green-500 rounded-full px-2 py-1 text-xs font-semibold text-white"><%= opinion.ratingStar %></span>
              </p>
            </div>  
          </div>
        <% end %>
        
        <% if 1 == 0 %>
          <% if opinions.count > 1 %>
            <!-- Add Arrows -->
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>


