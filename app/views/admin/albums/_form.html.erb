<%= form_with(model: [:admin, album], class: "contents") do |form| %>
  <% if album.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(album.errors.count, "error") %> prohibited this album from being saved:</h2>

      <ul>
        <% album.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :password %>
    <%= form.text_field :password, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :code %>
    <%= form.text_field :code, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :counter %>
    <%= form.number_field :counter, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :emails %>
    <%= form.text_field :emails, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :published_at %>
    <%= form.date_field :published_at, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.text_field :status, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="w-full flex justify-center items-center bg-slate-50">
    <label class="flex flex-col justify-center items-center tracking-wide uppercase cursor-pointer">
      <% if form.object.images.attached? %>
        <!-- for edir form when image is attached to a product -->
        <div class="flex justify-between items-center">
          <% form.object.images do |image|%>
            <%= image_tag(image, class: 'w-64 h-64 object-cover', data: { 'image-preview-target': 'preview' }) %>
            <%= inline_svg_tag('icons/form/image.svg', data: { 'image-preview-target': 'svg'}, class:'w-64 h-64 text-slate-300 hidden') %>
          <% end %>
        </div>
      <% else %>
        <!-- for new form when image is not attached to a product -->
        <%= image_tag('icons/form/image.svg', class: 'w-64 h-64 object-cover hidden', data: { 'image-preview-target': 'preview' }) %>
        <%= inline_svg_tag('icons/form/image.svg', data: { 'image-preview-target': 'svg'}, class:'w-64 h-64 text-slate-300') %>
      <% end %>
      <span class="mt-2 text-lg text-slate-500 "><%= t('.add_image') %></span>
      <%= form.file_field :images, multiple: :true, include_hidden: false , class: 'hidden', data: { 'image-preview-target': 'input', action: 'change->image-preview#previewImage' } %>
    </label>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
