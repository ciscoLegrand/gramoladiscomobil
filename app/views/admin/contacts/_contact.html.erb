<div id="<%= dom_id contact %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= contact.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Phone:</strong>
    <%= contact.phone %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= contact.email %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= contact.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Data:</strong>
    <%= contact.data %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">body:</strong>
    <%= contact.body %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this contact", admin_contact_path(contact), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
