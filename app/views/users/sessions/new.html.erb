<main class="min-h-screen bg-gray-100 dark:bg-gray-800 py-6 flex flex-col justify-center sm:py-12">
	<section class="relative py-3 sm:max-w-xl sm:mx-auto px-4 sm:px-0">
		<div class="absolute inset-0 bg-gradient-to-r from-blue-300 to-blue-600 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl"></div>
		<article class="relative p-4 sm:p-10 lg:p-20 bg-white dark:bg-gray-900 shadow-lg sm:rounded-3xl">
			<div class="mx-auto sm:max-w-md">
				<header>
					<h1 class="text-2xl font-semibold text-gray-900 dark:text-gray-100">Login</h1>
				</header>
				<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "divide-y divide-gray-200 dark:divide-gray-700") do |f| %>
					<%= render "devise/shared/error_messages", resource: resource %>
					<div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
						<div class="relative">
							<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "peer placeholder-transparent h-10 w-full border-t-0 focus:border-t-0 focus:border-x-0 focus:ring-transparent border-x-0 border-b-2 border-b-gray-300 dark:border-b-gray-600 text-gray-900 dark:text-gray-100 focus:outline-none focus:border-b-rose-600", placeholder: "Email address" %>
							<label for="email" class="absolute left-0 -top-3.5 text-gray-600 dark:text-gray-400 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm">Email Address</label>
						</div>
						<div class="relative">
							<%= f.password_field :password, autocomplete: "new-password", class: "peer placeholder-transparent h-10 w-full border-t-0 focus:border-t-0 focus:border-x-0 focus:ring-transparent border-x-0 border-b-2 border-b-gray-300 dark:border-b-gray-600 text-gray-900 dark:text-gray-100 focus:outline-none focus:border-b-rose-600", placeholder: "Password" %>
							<label for="password" class="absolute left-0 -top-3.5 text-gray-600 dark:text-gray-400 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm">Password</label>
						</div>
							<div class="relative flex flex-col justify-between items-center gap-4">

								<%= button_to nil, class: "w-full flex justify-start items-center bg-blue-500 text-white rounded-lg px-4 py-2 mx-2 gap-4" do %>
									<%= inline_svg_tag 'icons/login/email.svg', class: 'h-4 w-4'%>
									Login
								<% end %>

								<div class="w-full flex justify-center items-center gap-4">
									<button class="flex justify-start items-center bg-blue-500 text-white rounded-lg px-4 py-2 mx-2 gap-4">
										<%= inline_svg_tag 'icons/login/facebook.svg', class: 'h-4 w-4'%>
										Facebook
									</button>
									<button class="flex justify-start items-center bg-red-500 text-white rounded-lg px-4 py-2 mx-2 gap-4">
										<%= inline_svg_tag 'icons/login/google.svg', class: 'h-4 w-4'%>
										Google
									</button>
									<button class="flex justify-start items-center bg-blue-400 text-white rounded-lg px-4 py-2 mx-2 gap-4">
										<%= inline_svg_tag 'icons/login/twitter.svg', class: 'h-4 w-4'%>
										Twitter
									</button>
								</div>
				      </div>
							<div class="text-sm flex flex-col gap-2">
								<%= render "devise/shared/links" %>
							</div>
					</div>
				<% end %>
			</div>
		</article>
	</section>
</main>
