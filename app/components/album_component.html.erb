<div class="dark:text-white border border-gray-200 shadow-lg shadow-slate-300 rounded-lg hover:bg-red-500 min-h-[120px] min-w-[300px]">
  <div class="w-1/2 md:w-full cursor-pointer relative">
    <figure class="aspect-w-4 aspect-h-3">
      <%= image_tag url_for(album.images.first), 
                    data: { src: "#{rails_blob_url(album.images.first)}"}, 
                    class: "object-cover" if album.images.attached? %>
    </figure>

    <%= link_to album_path(album), class: "w-full h-full opacity-0 hover:opacity-100 justify-center items-center p-4 absolute top-0 transition-all delay-300 hover:delay-300 bg-slate-50 bg-opacity-75" do %>
      <div class="w-full flex-grow m-auto">
        <p class="text-lg md:text-xl dark:text-white mt-3"><%= "#{album.title}" %></p>
        <p class="text-lg md:text-sm dark:text-white">
          <time datetime="<%= album.date_event.strftime("%d-%m-%Y") if album.date_event.present? %>">
            <%= album.date_event.strftime("%d-%m-%Y") if album.date_event.present?%>
          </time>
        </p>
        <% if 1 == 0 %>
          <%= form_tag verify_password_album_path(album), method: :post, class: 'w-full flex flex-col gap-4 justify-center items-center' do %>
              <div class="w-full">
                <%= text_field_tag :password, params[:password], class: 'w-full border rounded' %>
              </div>
              <%= submit_tag nil, :name => nil, class: 'w-full px-4 py-2 rounded bg-blue-500 text-white' %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
